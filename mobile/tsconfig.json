{
	"extends": "expo/tsconfig.base",
	"compilerOptions": {
		"strict": true,
		"paths": {
			"@/*": ["./*"],
			"@components/*": ["./components/*"],
			"@constants/*": ["./constants/*"],
			"@hooks/*": ["./hooks/*"],
			"@lib/*": ["./lib/*"]
		}
	},
	"include": [
		"**/*.ts",
		"**/*.tsx",
		".expo/types/**/*.ts",
		"expo-env.d.ts",
		"nativewind-env.d.ts"
	]
}
