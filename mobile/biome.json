{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"ignore": [
			"node_modules/",
			".expo/",
			"dist/",
			"web-build/",
			"expo-env.d.ts",
			".DS_Store",
			"*.tsbuildinfo",
			"*.orig.*",
			"*.jks",
			"*.p8",
			"*.p12",
			"*.key",
			"*.mobileprovision",
			".metro-health-check*",
			"npm-debug.*",
			"yarn-debug.*",
			"yarn-error.*",
			"*.pem",
			".env*.local",
			"components/__tests__/"
		]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	}
}
